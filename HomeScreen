                                                    numberC--;
                                                    if (numberC - 1 >= 0 &&
                                                        numberC - 1 <= 100) {
                                                      totalNumber -= 80;
                                                    } else {
                                                      totalNumber = 0;
                                                    }
                                                    setState(() {});
                                                  },backgroundColor: Colors.white,
